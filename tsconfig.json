{
    "compilerOptions": {
        // 选择编译特性
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2016",
        "jsx": "react",
        "lib": [
            "dom",
            "es2016",
            "scripthost",
            "es2018"
        ],
        // 编译输出模式
        "sourceMap": true,
        "typeRoots": [
            "./src/typings"
        ],
        "outDir": "./public",
        // 严格程度
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*"
    ]
}